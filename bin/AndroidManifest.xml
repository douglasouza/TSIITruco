<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.ufms.facom.truco"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="20" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        <activity
            android:name="br.ufms.facom.activity.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="br.ufms.facom.activity.LobbyActivity"
            android:label="@string/title_activity_lobby"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="br.ufms.facom.activity.JoinGameActivity"
            android:label="@string/title_activity_join_game"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="br.ufms.facom.activity.HostGameActivity"
            android:label="@string/title_activity_host_game"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="br.ufms.facom.activity.ClientGameActivity"
            android:label="@string/title_activity_client_game"
            android:screenOrientation="landscape" >
        </activity>
    </application>

</manifest>